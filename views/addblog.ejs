<main>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm">
        <div class="card-body">
          <h4 class="mb-4 text-center">Just Tell the World about it</h4>

          <form action="/post" method="POST">
            <!-- Game Title -->
            <div class="mb-3">
              <label for="title" class="form-label">Game Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="The game you're gonna tell us more about?"
                required
              >
            </div>

            <!-- Post Text -->
            <div class="mb-3">
              <label for="content" class="form-label">Post Content</label>
              <textarea
                class="form-control"
                id="content"
                name="content"
                rows="5"
                placeholder="Tell us more about it..."
                required
              ></textarea>
            </div>

            <!-- Submit -->
            <div class="d-grid">
              <input
                type="submit"
                class="btn btn-dark"
                value="Submit Post"
              >
            </div>
          </form>

        </div>
      </div>

    </div>
  </div>
</div>
</main>

